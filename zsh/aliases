alias xi='sudo xbps-install -Sy && sudo xbps-install'
alias xu='echo "Updating System (sudo xbps-install -Syu):" && sudo xbps-install -Syu'
xrs() {xbps-query -Rs "$1" | less -F}
xrS() {xbps-query -RS "$1" | less -F}
alias xclean='echo "Starting System Cleanup (sudo xbps-remove -Oo):" && sudo xbps-remove -Oo'
alias xrm='sudo xbps-remove'

alias tl='clear && task list'
alias ti='clear && task install'
alias tm='clear && task modify'
alias tn='clear && task next'
alias ta='clear && task add'
alias trm='clear && task remove'
alias tan='clear && task annotate'
alias fix_refreshrate='wlr-randr --output DP-6 --mode 2560x1440@119.988998'
alias ls='ls --color=auto'
